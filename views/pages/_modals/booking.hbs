<!-- Accept booking modal -->
<form action="/api/tenant/add" method="POST">
    <div class="modal fade js-accept-booking-modal" tabindex="-1" role="dialog"
        aria-labelledby="js-accept-booking-modal" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Accept booking</h4>
                </div>
                <div class="modal-body">
                    <div class="row m-2">
                        <div class="col-md-6">
                            <section>
                                <header>
                                    <h5>Personal information</h5>
                                </header>
                                <section>
                                    <input name="property" type="hidden" value="{{property._id}}" required>
                                    <input class="js-input-booking-id" name="booking" type="hidden" required>
                                    <div class="form-group">
                                        <label>First name</label>
                                        <input class="form-control js-input-booking-first-name" name="first_name"
                                            type="text" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Last name</label>
                                        <input class="form-control js-input-booking-last-name" name="last_name"
                                            type="text" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Birthday</label>
                                        <input class="form-control js-input-booking-birthday" name="birthday"
                                            type="date" required>
                                    </div>
                                </section>
                            </section>
                            <section>
                                <header>
                                    <h5>Contact information</h5>
                                </header>
                                <section>
                                    <div class="form-group">
                                        <label>Mobile</label>
                                        <input class="form-control js-input-booking-mobile" name="mobile" type="number"
                                            required>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input class="form-control js-input-booking-email" name="email" type="email"
                                            required>
                                    </div>
                                </section>
                            </section>
                        </div>
                        <div class="col-md-6">
                            <header>
                                <h5>Room information</h5>
                            </header>
                            <section>
                                <div class="form-group">
                                    <label>Preferred room</label>
                                    <input class="form-control js-input-booking-room" type="text" disabled>
                                </div>
                                <div class="form-group">
                                    <label>Room</label>
                                    <div class="form-group">
                                        <select class="form-control" name="room" required>
                                            {{#if rooms}}
                                            {{#each rooms }}
                                            <option value="{{_id}}" {{#if tenant}} disabled {{/if}}>{{name}} -
                                                Floor {{floor}} - {{catalog.name}} - {{catalog.rate}}
                                            </option>
                                            {{/each}}
                                            {{else}}
                                            <option value="" disabled><span>No rooms available.</span></option>
                                            {{/if}}
                                        </select>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-cancel" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-submit">Add</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Decline booking modal -->
<form action="/api/booking/decline" method="post">
    <div class="modal fade js-decline-booking-modal" tabindex="-1" role="dialog"
        aria-labelledby="js-decline-booking-modal" aria-hidden="true">
