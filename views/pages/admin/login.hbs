{{#extend "main"}}

{{#content "extra_css"}}
{{/content}}

{{#content "main"}}
<main class="main main--admin">
    <section class="main__content">
        <div class="page page--login">
            <div class="page__content">
                <header class="page__header text-center mb-4">
                    <h3 class="page__title">Log in</h3>
                </header>
                <section class="page__body">
                    <form class="form form--user-login js-form--user-login" action="/api/user/login" method="POST"
                        novalidate>
                        {{#if msg}}
                        <div class="d-flex align-items-center mb-4">
                            <svg class="svg svg--red mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                                fill="red">
                                <path
                                    d="M11 15h2v2h-2v-2zm0-8h2v6h-2V7zm.99-5C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z" />
                            </svg>
                            <span class="msg msg--status--error">{{msg}}</span>
                        </div>
                        {{/if}}
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control js-form-input-email" type="email" name="email" required>
                            <span class="msg msg--status--error js-email-indicator mt-1"></span>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input class="form-control js-form-input-password" type="password" name="password" required>
                            <span class="msg msg--status--error js-password-indicator mt-1"></span>
                        </div>
                        <button class="btn--submit btn btn-block rounded-pill mt-4">Log in</button>
                    </form>
                </section>
                <div class="d-flex flex-column align-items-center mt-5" style="font-size: 14px;">
                    <span>Forgot password? <a class="link" href="#reset">Reset</a></span>
                    <span>Don't have an account yet? <a class="link" href="/signup">Sign up</a></span>
                </div>
            </div>
        </div>
    </section>
</main>
{{/content}}

{{#content "extra_js"}}
<script src="/js/form-validation/login.js"></script>
{{/content}}

{{/extend}}