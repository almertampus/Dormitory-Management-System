{{#extend "main"}}

{{#content "extra_css"}}
{{/content}}

{{#content "main"}}
<main class="main main--admin">
    <section class="main-content">
        <div class="page page--login">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-4 pt-4 pb-4 custom-bg-2 rounded">
                        <h3 class="text-center">Log in</h3>
                        <form class="pt-2 pr-4 pb-2 pl-4 js-form--user-login" action="/api/user/login" method="POST"
                            novalidate>
                            {{#if msg}}
                            <div class="d-flex align-items-center mb-4">
                                <svg class="svg svg--red mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path
                                        d="M11 15h2v2h-2v-2zm0-8h2v6h-2V7zm.99-5C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z" />
                                </svg>
                                <span class="msg msg-status--error">{{msg}}</span>
                            </div>
                            {{/if}}
                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control js-form-input-email" type="email" name="email" required>
                                <span class="msg msg-status--error js-email-indicator mt-1"></span>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input class="form-control js-form-input-password" type="password" name="password"
                                    required>
                                <span class="msg msg-status--error js-password-indicator mt-1"></span>
                            </div>
                            <button class="btn btn-submit btn-block mt-4">Log in</button>
                        </form>
                        <div class="mt-4 d-flex flex-column align-items-center" style="font-size: 14px;">
                            <span>Forgot password? <a class="link" href="#reset">Reset</a></span>
                            <span>Don't have an account yet? <a class="link" href="/signup">Sign up</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{{/content}}

{{#content "extra_js"}}
<script src="/js/form-validation/login.js"></script>
{{/content}}

{{/extend}}