{{#extend "layout-admin"}}

{{#content "extra_css"}}
{{/content}}

{{#content "content"}}

<!-- Content -->
<main class="wrapper" id="management">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 p-0">
                <section class="info">
                    <div class="table-responsive-md text-nowrap">
                        <table id="tableCatalog" class="table table-borderless" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Rate</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each catalogs}}
                                <tr>
                                    <td>
                                        {{name}}
                                    </td>
                                    <td>Php {{rate}}</td>
                                    <td class="text-center">
                                        <button type="button"
                                            class="btn btn-sm blue darken-2 text-white m-0 mr-2 z-depth-0"
                                            id="editCatalogButton" data-id="{{_id}}" data-name="{{name}}"
                                            data-rate="{{rate}}" data-toggle="modal" data-target="#editCatalogModal">
                                            Edit
                                        </button>
                                        <button type="button" class="btn btn-sm red darken-3 text-white m-0 z-depth-0"
                                            id="deleteCatalogButton" data-id="{{_id}}" data-name="{{name}}"
                                            data-rate="{{rate}}" data-toggle="modal" data-target="#deleteCatalogModal">
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </div>
</main>

<!-- Add catalog modal -->
<form action="/api/catalog/add" method="POST">
    <div class="modal fade" id="addCatalogModal" tabindex="-1" role="dialog" aria-labelledby="addCatalogModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add catalog</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group mt-2 mb-3">
                        <label for="name">Name</label>
                        <input class="form-control" name="name" type="text" id="name" required>

                    </div>
                    <div class="form-group mb-3">
                        <label for="rate">Rate</label>
                        <input class="form-control" name="rate" type="number" id="rate" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn z-depth-0 text-white" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-custom">Add</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Update catalog modal -->
<form action="/api/catalog/update" method="POST">
    <div class="modal fade" id="editCatalogModal" tabindex="-1" role="dialog" aria-labelledby="editCatalogModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit catalog</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group mt-2 mb-3">
                        <label for="inputEditCatalogName">Name</label>
                        <input class="form-control" name="name" type="text" id="inputEditCatalogName"
                            value="placeholder" required>
                        <input class="form-control" name="_id" id="inputEditCatalog_id" value="placeholder"
                            type="hidden" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="inputEditCatalogRate">Rate</label>
                        <input class="form-control" name="rate" type="text" id="inputEditCatalogRate"
                            value="placeholder" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn z-depth-0 text-white" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-custom">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Delete catalog modal -->
<form action="/api/catalog/delete" method="POST">
    <div class="modal fade" id="deleteCatalogModal" tabindex="-1" role="dialog" aria-labelledby="deleteCatalogModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete Catalog</h4>
                </div>
                <div class="modal-body">
                    <input class="form-control" name="_id" id="inputDeleteCatalog_id" type="hidden" required>
                    <span class="font-weight-normal">Catalog information</span>
                    <table class="table table-sm table-borderless mt-2">
                        <tbody>
                            <tr>
                                <td class="td-title">Name</td>
                                <td class="td-content"><span id="spanDeleteCatalogName"></span></td>
                            </tr>
                            <tr>
                                <td class="td-title">Rate</td>
                                <td class="td-content"><span id="spanDeleteCatalogRate"></span></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="mt-4">
                        <span class="font-weight-normal" style="font-size: 14px;">Note:</span>
                        <p class="mt-2 pt-3 pr-2 pb-3 pl-2 rounded border border-white" style="font-size: 14px;">
                            Catalogs that are currently being <span
                                class="red-text font-weight-bold font-italic">used</span>
                            cannot be deleted.
                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn z-depth-0 text-white" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn red darken-3">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</form>

{{/content}}

{{#content "extra_js"}}

<script>
    // Edit and delete catalog
    $(document).on("click", "#editCatalogButton, #deleteCatalogButton", function () {
        let _id = $(this).data('id');
        let name = $(this).data('name');
        let rate = $(this).data('rate');

        // Edit
        $("#inputEditCatalog_id").val(_id);
        $("#inputEditCatalogName").val(name);
        $("#inputEditCatalogRate").val(rate);

        // Delete
        $("#inputDeleteCatalog_id").val(_id);
        $("div #spanDeleteCatalogName").text(name);
        $("div #spanDeleteCatalogRate").text(rate);

        console.log(_id)
    });

    // DataTables
    $('#tableCatalog').DataTable({
        "responsive": true,
        "details": false,
        "columnDefs": [
            { responsivePriority: 1, targets: 0 },
            { responsivePriority: 2, targets: 2 }
        ],
        "dom": '<"d-flex justify-content-between align-items-center mb-3"Bf>t<"d-flex justify-content-between align-items-center mt-4"ip>',
        "buttons": {
            dom: {
                button: {
                    tag: 'button',
                    className: 'btn'
                }
            },
            buttons: [
                {

                    className: 'btn-custom m-0 z-depth-0',
                    text: `Add catalog`,
                    action: function (e, dt, node, config) {
                        $('#addCatalogModal').modal('show')
                    }
                },
            ]
        },
        "pageLength": 10
    });
</script>

