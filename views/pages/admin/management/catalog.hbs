{{#extend "layout-admin"}}

{{#content "extra_css"}}
{{/content}}

{{#content "content"}}

<!-- Content -->
<main class="wrapper" id="management">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 p-0">
                <section class="info">
                    <table id="tableCatalog" class="table table-borderless table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Rate</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each catalogs}}
                            <tr>
                                <td>
                                    {{name}}
                                </td>
                                <td>{{rate}}</td>
                                <td>
                                    <button type="button" class="btn p-3 z-depth-0" id="editCatalogButton"
                                        data-id="{{_id}}" data-name="{{name}}" data-rate="{{rate}}" data-toggle="modal"
                                        data-target="#editCatalogModal">
                                        <img class="icon m-0" src="/images/icons/create-white-18dp.svg" alt="">
                                    </button>
                                    <button type="button" class="btn p-3 z-depth-0" id="deleteCatalogButton"
                                        data-id="{{_id}}" data-name="{{name}}" data-rate="{{rate}}" data-toggle="modal"
                                        data-target="#deleteCatalogModal">
                                        <img class="icon m-0" src="/images/icons/delete_forever-white-18dp.svg" alt="">
                                    </button>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </div>
</main>

<!-- Add catalog modal -->
<form action="/api/catalog/add" method="POST">
    <div class="modal fade" id="addCatalogModal" tabindex="-1" role="dialog" aria-labelledby="addCatalogModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add catalog</h4>
                </div>
                <div class="modal-body">
                    <div class="md-form mt-2 mb-3">
                        <label for="name">Name</label>
                        <input class="form-control" name="name" type="text" id="name" required>

                    </div>
                    <div class="md-form mb-3">
                        <label for="rate">Rate</label>
                        <input class="form-control" name="rate" type="number" id="rate" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn z-depth-0 text-white" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-custom">Add</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Edit catalog modal -->
<form action="/api/catalog/edit" method="POST">
    <div class="modal fade" id="editCatalogModal" tabindex="-1" role="dialog" aria-labelledby="editCatalogModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit catalog</h4>
                </div>
                <div class="modal-body">
                    <div class="md-form mt-2 mb-3">
                        <label for="inputEditCatalogName">Name</label>
                        <input class="form-control" name="name" type="text" id="inputEditCatalogName"
                            value="placeholder" required>
                        <input class="form-control" name="_id" id="inputEditCatalog_id" value="placeholder"
                            type="hidden" required>
                    </div>
                    <div class="md-form mb-3">
                        <label for="inputEditCatalogRate">Rate</label>
                        <input class="form-control" name="rate" type="text" id="inputEditCatalogRate"
                            value="placeholder" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn z-depth-0 text-white" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-custom">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Delete catalog modal -->
<form action="/api/catalog/delete" method="POST">
    <div class="modal fade" id="deleteCatalogModal" tabindex="-1" role="dialog" aria-labelledby="deleteCatalogModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Are you sure you want to delete?</h4>
                </div>
                <div class="modal-body">
                    <input class="form-control" name="_id" id="inputDeleteCatalog_id" type="hidden" required>
                    <div>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span id="spanDeleteCatalogName"></span></td>
                                    <td><span id="spanDeleteCatalogRate"></span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn z-depth-0 text-white" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm delete</button>
                </div>
            </div>
        </div>
    </div>
</form>

{{/content}}

{{#content "extra_js"}}

<script>
    // Edit and delete catalog
    $(document).on("click", "#editCatalogButton, #deleteCatalogButton", function () {
        let _id = $(this).data('id');
        let name = $(this).data('name');
        let rate = $(this).data('rate');

        // Edit
        $("#inputEditCatalog_id").val(_id);
        $("#inputEditCatalogName").val(name);
        $("#inputEditCatalogRate").val(rate);

        // Delete
        $("#inputDeleteCatalog_id").val(_id);
        $("div #spanDeleteCatalogName").text(name);
        $("div #spanDeleteCatalogRate").text(rate);

        console.log(_id)
    });

    // DataTables
    $('#tableCatalog').DataTable({
        "dom": '<"d-flex justify-content-between align-items-center mb-3"Bf>t<"d-flex justify-content-between align-items-center mt-4"ip>',
        "buttons": {
            dom: {
                button: {
                    tag: 'button',
                    className: 'btn'
                }
            },
            buttons: [
                {

                    className: 'btn-custom m-0 z-depth-0',
                    text: `Add catalog`,
                    action: function (e, dt, node, config) {
                        $('#addCatalogModal').modal('show')
                    }
                },
            ]
        },
        "pageLength": 10
    });
</script>

{{/content}}

