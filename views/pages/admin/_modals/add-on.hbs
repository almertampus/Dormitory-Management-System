<!-- Add add-on modal -->
<form action="/api/addOn/add" method="POST">
    <div class="modal fade" id="addAddOnModal" tabindex="-1" role="dialog" aria-labelledby="addAddOnModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add add-on</h4>
                </div>
                <div class="modal-body">
                    <input name="property" type="hidden" value="{{property._id}}" required>
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" name="name" type="text" required>
                    </div>
                    <div class="form-group">
                        <label>Rate</label>
                        <input class="form-control" name="rate" type="number" required>
                    </div>
                    <div class="form-group">
                        <label>Payment Type</label>
                        <input class="form-control" name="type" type="text" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn z-depth-0 text-white" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn--submit btn">Add</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Update add-on modal -->
<form action="/api/addOn/update" method="POST">
    <div class="modal fade" id="editAddOnModal" tabindex="-Type1" role="dialog" aria-labelledby="editAddOnModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit add-on</h4>
                </div>
                <div class="modal-body">
                    <input name="property" type="hidden" value="{{property._id}}" required>
                    <input class="js-input-add-on-id" name="_id" type="hidden" required>
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control js-input-add-on-name" name="name" type="text" required>
                    </div>
                    <div class="form-group">
                        <label>Rate</label>
                        <input class="form-control js-input-add-on-rate" name="rate" type="text" required>
                    </div>
                    <div class="form-group">
                        <label>Payment Type</label>
                        <input class="form-control js-input-add-on-type" name="type" type="text" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn z-depth-0 text-white" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn--submit btn">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Delete add-on modal -->
<form action="/api/addOn/delete" method="POST">
    <div class="modal fade" id="deleteAddOnModal" tabindex="-1" role="dialog" aria-labelledby="deleteAddOnModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete Add-on</h4>
                </div>
                <div class="modal-body">
                    <input name="property" type="hidden" value="{{property._id}}" required>
                    <input class="js-input-add-on-id" name="_id" type="hidden" required>
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control js-input-add-on-name" disabled>
                    </div>
                    <div class="form-group">
                        <label>Rate</label>
                        <input class="form-control js-input-add-on-rate" disabled>
                    </div>
                    <div class="form-group">
                        <label>Payment Type</label>
                        <input class="form-control js-input-add-on-type" disabled>
                    </div>
                    <div class="mt-4 p-1">
                        <div class="d-flex flex-column" style="font-size: 13px;">
                            <span>Note:</span>
                            <p style="font-style: italic;">
                                Add-ons that are currently being used cannot be deleted.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn z-depth-0 text-white" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn red darken-3 text-white">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</form>