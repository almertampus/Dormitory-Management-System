{{#extend "layout-admin"}}

{{#content "extra_css"}}
{{/content}}

{{#content "content"}}

<!-- Content -->
<main class="wrapper" id="profile">
    <div class="container-fluid">
        <div class="row justify-content-between">
            <div class="col-md-7 mt-4 p-0">
                <div class="d-flex justify-content-center">
                    <div class="info-header">
                        <span>Edit your profile</span>
                        <div class="upload-wrapper">
                            <div class="upload">
                                {{#if user.avatar}} <img id="profile-avatar"
                                    src="data:image/png;base64,{{user.avatar.data}}">
                                {{else}} <img id="profile-avatar" src="/images/icons/default-avatar.svg">
                                {{/if}}
                                <a class="z-depth-0" data-toggle="modal" data-target="#editProfileModal">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white"
                                        width="18px" height="18px">
                                        <path d="M0 0h24v24H0z" fill="none" />
                                        <path
                                            d="M21 6h-3.17L16 4h-6v2h5.12l1.83 2H21v12H5v-9H3v9c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zM8 14c0 2.76 2.24 5 5 5s5-2.24 5-5-2.24-5-5-5-5 2.24-5 5zm5-3c1.65 0 3 1.35 3 3s-1.35 3-3 3-3-1.35-3-3 1.35-3 3-3zM5 6h3V4H5V1H3v3H0v2h3v3h2z" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                    <form action="/api/user/profile/info/update" method="POST">
                        <div class="md-form mt-0 mb-3">
                            <input class="form-control" name="username" id="username" type="text"
                                value="{{user.username}}" required>
                            <label for="username">Username</label>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <div class="md-form mt-0 mb-3">
                                    <input class="form-control" name="first_name" id="first_name" type="text"
                                        value="{{user.first_name}}">
                                    <label for="first_name">First name</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="md-form mt-0 mb-3">
                                    <input class="form-control" name="last_name" id="last_name" type="text"
                                        value="{{user.last_name}}">
                                    <label for="last_name">Last name</label>
                                </div>
                            </div>
                        </div>
                        <div class="md-form mt-0 mb-3">
                            <input class="form-control" name="contact" id="contact" type="text"
                                value="{{user.contact}}">
                            <label for="contact">Contact</label>
                        </div>
                        <div class="md-form mt-0 mb-3">
                            <input class="form-control" name="email" id="email" type="email" value="{{user.email}}"
                                required>
                            <label for="email">Email</label>
                            <input class="form-control" name="_id" id="_id" type="hidden" value="{{user._id}}" required>
                        </div>
                        <div class="btn-wrapper">
                            <button type="submit" class="btn btn-custom m-0">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Update profile modal -->
<form action="/api/user/profile/avatar/update" method="POST" enctype="multipart/form-data">
    <div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog" aria-labelledby="editProfileModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Change profile photo</h4>
                </div>
                <div class="modal-body">
                    <div class="upload">
                        <div class="form-group">
                            <label for="file">
                                {{#if user.avatar}} <img id="old_image"
                                    src="data:image/png;base64,{{user.avatar.data}}">
                                {{else}} <img id="old_image" src="/images/icons/default-avatar.svg"> {{/if}}
                                <div id="updated_image"></div>
                                <div class="upload_text">
                                    <svg class="mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                                        fill="white" width="24px" height="24px">
                                        <path d="M0 0h24v24H0z" fill="none" />
                                        <path
                                            d="M21 6h-3.17L16 4h-6v2h5.12l1.83 2H21v12H5v-9H3v9c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zM8 14c0 2.76 2.24 5 5 5s5-2.24 5-5-2.24-5-5-5-5 2.24-5 5zm5-3c1.65 0 3 1.35 3 3s-1.35 3-3 3-3-1.35-3-3 1.35-3 3-3zM5 6h3V4H5V1H3v3H0v2h3v3h2z" />
                                    </svg>
                                    <span style="font-size: .9rem;">Click to upload a new photo</span>
                                </div>
                            </label>
                            <input name="avatar" id="file" type="file" accept="image/png, image/jpeg, image/jpg"
                                onchange="update(this);" required />
                            <input class="form-control" name="_id" id="_id" type="hidden" value="{{user._id}}" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn z-depth-0 text-white" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-custom">Set new profile photo</button>
                </div>
            </div>
        </div>
    </div>
</form>

{{/content}}

{{#content "extra_js"}}
{{/content}}

{{/extend}}