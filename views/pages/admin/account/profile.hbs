{{#extend "layout-admin"}}

{{#content "extra_css"}}
{{/content}}

{{#content "content"}}

<!-- Content -->
<main class="wrapper" id="profile">
    <div class="container-fluid">
        <div class="row justify-content-between">
            <div class="col-md-12 mt-4 p-4">
                <div class="d-flex justify-content-center">
                    <div class="profile-info-header">
                        <h4>Edit your profile</h4>
                        <div class="profile-photo-wrapper">
                            <div id="profile-photo" {{#if user.avatar}}
                                style="background-image: url('data:image/png;base64,{{user.avatar.data}}');" {{/if}}>
                            </div>
                            <a class="profile-photo-button z-depth-0" data-toggle="modal"
                                data-target="#editProfileModal">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white" width="24px"
                                    height="24px">
                                    <path d="M0 0h24v24H0z" fill="none" />
                                    <circle cx="12" cy="12" r="3.2" />
                                    <path
                                        d="M9 2L7.17 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2h-3.17L15 2H9zm3 15c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5z" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
                <form action="/api/user/profile/info/update" method="POST">
                    <div class="md-form mt-2 mb-4">
                        <input class="form-control" name="username" id="username" type="text" value="{{user.username}}"
                            required>
                        <label for="username">Username</label>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <div class="md-form mt-0 mb-4">
                                <input class="form-control" name="first_name" id="first_name" type="text"
                                    value="{{user.first_name}}">
                                <label for="first_name">First name</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="md-form mt-0 mb-4">
                                <input class="form-control" name="last_name" id="last_name" type="text"
                                    value="{{user.last_name}}">
                                <label for="last_name">Last name</label>
                            </div>
                        </div>
                    </div>
                    <div class="md-form mt-0 mb-4">
                        <input class="form-control" name="contact" id="contact" type="text" value="{{user.contact}}">
                        <label for="contact">Contact</label>
                    </div>
                    <div class="md-form mt-0 mb-4">
                        <input class="form-control" name="email" id="email" type="email" value="{{user.email}}"
                            required>
                        <label for="email">Email</label>
                        <input class="form-control" name="_id" id="_id" type="hidden" value="{{user._id}}" required>
                    </div>
                    <div class="btn-wrapper">
                        <button type="submit" class="btn btn-custom m-0">Save</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    </div>
</main>

<!-- Update profile modal -->
<form action="/api/user/profile/avatar/update" method="POST" enctype="multipart/form-data">
    <div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog" aria-labelledby="editProfileModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Profile photo</h4>
                </div>
                <div class="modal-body">
                    <div class="upload">
                        <label for="file">
                            <div class="upload-profile-photo" id="current_profile_photo"
                                {{#if user.avatar}}style="background-image: url('data:image/png;base64,{{user.avatar.data}}');"
                                {{/if}}>
                                <div id="upload-profile-photo-info">
                                    <svg class="mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                                        fill="white" width="24px" height="24px">
                                        <path d="M0 0h24v24H0z" fill="none" />
                                        <circle cx="12" cy="12" r="3.2" />
                                        <path
                                            d="M9 2L7.17 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2h-3.17L15 2H9zm3 15c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5z" />
                                    </svg>
                                    <span style="font-size: .9rem;">Upload a new photo</span>
                                </div>
                            </div>
                            <div class="upload-profile-photo" id="uploaded_profile_photo">
                                <div id="upload-profile-photo-info">
                                    <svg class="mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                                        fill="white" width="18px" height="18px">
                                        <path d="M0 0h24v24H0z" fill="none" />
                                        <circle cx="12" cy="12" r="3.2" />
                                        <path
                                            d="M9 2L7.17 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2h-3.17L15 2H9zm3 15c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5z" />
                                    </svg>
                                    <span style="font-size: .9rem;">Upload a photo</span>
                                </div>
                            </div>
                        </label>
                        <input name="avatar" id="file" type="file" accept="image/png, image/jpeg, image/jpg"
                            onchange="update(this);" required />
                        <input class="form-control" name="_id" id="_id" type="hidden" value="{{user._id}}" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn z-depth-0 text-white" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-custom">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

{{/content}}

{{#content "extra_js"}}
{{/content}}

{{/extend}}