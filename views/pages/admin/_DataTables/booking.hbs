<div class="table-responsive-md text-nowrap">
    <table class="table table-borderless js-table-booking" style="width: 100%;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Birthday</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>Preferred Room</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each bookings}}
            <tr>
                <td>{{last_name}}, {{first_name}}</td>
                <td>{{birthday}}</td>
                <td>{{mobile}}</td>
                <td>{{email}}</td>
                <td>{{catalog.name}}</td>
                <td class="text-center">
                    <button type="button" class="btn btn-sm green darken-2 text-white m-0 mr-2 z-depth-0">
                        accept
                    </button>
                    <button type="button" class="btn btn-sm  red darken-3 text-white m-0 z-depth-0">
                        decline
                    </button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>