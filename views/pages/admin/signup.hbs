{{#extend "main"}}

{{#content "extra_css"}}
{{/content}}

{{#content "main"}}
<main class="main main--admin">
    <section class="main__content">
        <div class="page page--login">
            <div class="page__content">
                <header class="page__header text-center mb-4">
                    <h3 class="page__title">Sign up</h3>
                </header>
                <section class="page__body">
                    <form class="form form--user-login js-form--user-signup" action="/api/user/signup" method="POST"
                        novalidate>
                        <div class="form-group">
                            <label>Username</label>
                            <input class="form-control js-form-input-username" type="text" name="username" required>
                            <span class="msg js-username-indicator mt-1"></span>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control js-form-input-email" type="email" name="email" required>
                            <span class="msg js-email-indicator mt-1"></span>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input class="form-control js-form-input-password" type="password" name="password" required>
                            <span class="msg js-password-indicator mt-1"></span>
                        </div>
                        <button class="btn--submit btn btn-block rounded-pill mt-4">Create account</button>
                    </form>
                </section>
                <div class="d-flex flex-column align-items-center mt-5" style="font-size: 14px;">
                    <span>Already have an account? <a class="link" href="/">Log in</a></span>
                </div>
            </div>
        </div>
    </section>
</main>
{{/content}}

{{#content "extra_js"}}
<script src="/js/form-validation/signup.js"></script>
{{/content}}

{{/extend}}