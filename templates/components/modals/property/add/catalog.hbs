<!-- Add catalog modal -->
<form action="/user/property/catalog/add" method="POST">
    <div class="modal fade" id="addCatalogModal" tabindex="-1" role="dialog" aria-labelledby="addCatalogModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add catalog</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group mt-2">
                        <label for="name">Name</label>
                        <input class="form-control" name="name" type="text" id="name" required>

                    </div>
                    <div class="form-group mb-4">
                        <label for="price">Price</label>
                        <input class="form-control" name="price" type="text" id="price" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn cancel" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn add">Add</button>
                </div>
            </div>
        </div>
    </div>
</form>