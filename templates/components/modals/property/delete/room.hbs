<!-- Delete room modal -->
<form action="/user/property/room/delete" method="POST">
    <div class="modal fade" id="deleteRoomModal" tabindex="-1" role="dialog" aria-labelledby="deleteRoomModal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Are you sure you want to delete?</h4>
                </div>
                <div class="modal-body">
                    <input class="form-control" name="_id" id="inputDeleteRoom_id" type="hidden" required>
                    <input class="form-control" name="property" id="property" type="hidden" value="{{property._id}}"
                        required>
                    <div>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Floor</th>
                                    <th>Catalog</th>
                                    <th>Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span id="spanDeleteRoomName"></span></td>
                                    <td><span id="spanDeleteRoomFloor"></span></td>
                                    <td><span id="spanDeleteRoomCatalogName"></span></td>
                                    <td><span id="spanDeleteRoomCatalogRate"></span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn z-depth-0 text-white" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm delete</button>
                </div>
            </div>
        </div>
    </div>
</form>