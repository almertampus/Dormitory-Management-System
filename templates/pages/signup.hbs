<div class="wrapper">
    <form class="col-xl-4" action="/user/signup" method="POST" enctype="multipart/form-data">
        <!-- Header -->
        <h2>Create an account</h2>

        <!-- Image -->
        <div class="upload">
            <label for="file">
                <div id="uploaded-image"></div>
                <span id="uploaded-message">Upload profile picture</span>
            </label>
            <input class="inputfile" name="avatar" id="file" type="file" accept="image/png, image/jpeg, image/jpg"
                onchange="upload(this);" required />
        </div>

        <!-- Input -->
        <div class="form-group">
            <input class="form-control" id="name" type="text" name="name" placeholder="Name" required>
            <input class="form-control" type="email" name="email" placeholder="Email" required>
            <input class="form-control" style="background-image: none;" type="password" name="password"
                placeholder="Password" required>
        </div>

        <!-- Button -->
        <button class="btn" type="submit">Submit</button>

        <!-- Log in -->
        <p>
            <br>
            <span>Already have an account? </span>
            <a href="/">Log in</a>
        </p>

    </form>
</div>