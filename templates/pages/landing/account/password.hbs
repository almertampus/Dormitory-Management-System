<!-- Main -->
<main class="wrapper">

    {{>sidebar}}

    <!-- Content -->
    <section class="content-wrapper" id="profile">

        {{>topbar}}

        <!-- Main Content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-7 mt-4 p-0">
                        <div class="d-flex justify-content-center">
                            <div class="info-header">
                                <span>Change password</span>
                            </div>
                            <form action="/user/profile/password/change" method="POST">
                                <div class="md-form mt-0 mb-3">
                                    <input class="form-control" name="currentPassword" id="currentPassword"
                                        type="password" required>
                                    <label for="currentPassword">Current password</label>
                                </div>
                                <div class="md-form mt-0 mb-3">
                                    <input class="form-control" name="newPassword" id="newPassword" type="password"
                                        onkeyup="check();" required>
                                    <label for="newPassword">New password</label>
                                </div>
                                <div class="md-form mt-0 mb-3">
                                    <input class="form-control" name="confirmNewPassword" id="confirmNewPassword"
                                        type="password" onkeyup="check();" required>
                                    <label for="confirmNewPassword">Confirm password</label>
                                    <input class="form-control" name="_id" id="_id" type="hidden" value="{{user._id}}"
                                        required>
                                    <input class="form-control" name="email" id="email" type="hidden"
                                        value="{{user.email}}" required>
                                </div>
                                <div class="btn-wrapper">
                                    <button type="submit" class="btn btn-custom">Update password</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
</main>