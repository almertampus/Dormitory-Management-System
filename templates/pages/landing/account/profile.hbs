<!-- Main -->
<main class="wrapper">

    {{>sidebar}}

    <!-- Content -->
    <section class="content-wrapper" id="profile">

        {{>topbar}}

        <!-- Main Content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row justify-content-between">

                    <div class="col-md-7 mt-4 p-0">
                        <div class="d-flex justify-content-center">
                            <div class="info-header">
                                <span>Information</span>
                                <div class="upload-wrapper">
                                    <div class="upload">
                                        {{#if user.avatar}} <img id="profile-avatar"
                                            src="data:image/png;base64,{{user.avatar.data}}">
                                        {{else}} <img id="profile-avatar" src="/images/icons/default-avatar.svg">
                                        {{/if}}
                                        <a class="z-depth-0" data-toggle="modal" data-target="#editProfileModal">
                                            <img src="/images/icons/create-white-18dp.svg" alt="">
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <form action=" /user/profile/info/update" method="POST">
                                <div class="md-form mt-0 mb-4">
                                    <input class="form-control" name="username" id="username" type="text"
                                        value="{{user.username}}">
                                    <label for="username">Username</label>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="md-form mt-0 mb-4">
                                            <input class="form-control" name="first_name" id="first_name" type="text"
                                                value="{{user.first_name}}">
                                            <label for="first_name">First name</label>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="md-form mt-0 mb-4">
                                            <input class="form-control" name="last_name" id="last_name" type="text"
                                                value="{{user.last_name}}">
                                            <label for="last_name">Last name</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="md-form mt-0 mb-4">
                                    <input class="form-control" name="contact" id="contact" type="text"
                                        value="{{user.contact}}">
                                    <label for="contact">Contact</label>
                                </div>
                                <div class="md-form mt-0 mb-4">
                                    <input class="form-control" name="email" id="email" type="email"
                                        value="{{user.email}}" required>
                                    <label for="email">Email</label>
                                    <input class="form-control" name="_id" id="_id" type="hidden" value="{{user._id}}"
                                        required>
                                </div>
                                <div class="btn-wrapper">
                                    <button type="submit" class="btn btn-primary m-0">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="col-md-5 mt-4">
                        <div class="d-flex justify-content-center">
                            <div class="upload-header" style="display: none;">
                                <span>Profile photo</span>
                            </div>
                            <div class="upload-wrapper" style="display: none;">
                                <div class="upload">
                                    {{#if user.avatar}} <img id="profile-avatar"
                                        src="data:image/png;base64,{{user.avatar.data}}">
                                    {{else}} <img id="profile-avatar" src="/images/icons/default-avatar.svg"> {{/if}}
                                    <a class="z-depth-0" data-toggle="modal" data-target="#editProfileModal">
                                        <img src="/images/placeholder.png" alt="">
                                        Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
</main>

<!-- Modal -->
{{>modals/account/avatar}}