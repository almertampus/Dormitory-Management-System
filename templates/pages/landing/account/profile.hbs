{{>topbar}}

<!-- Main -->
<main class="wrapper">

    {{>sidebar}}

    <!-- Content -->
    <section class="content-wrapper" id="profile">

        <!-- Main Content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 p-0">
                        <header>
                            <h2>Edit profile</h2>
                        </header>
                        <section class="profile-info">
                            <div class="upload">
                                <img id="profile-avatar" src="data:image/png;base64,{{user.avatar.data}}">
                                <a class="btn z-depth-0" data-toggle="modal" data-target="#editProfileModal">
                                    Change photo
                                </a>
                            </div>
                            <form action="/user/profile/info/update" method="POST">
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input class="form-control" name="username" id="username" type="text"
                                        value="{{user.username}}">
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <label for="first_name">First Name</label>
                                        <input class="form-control" name="first_name" id="first_name" type="text"
                                            value="{{user.first_name}}">
                                    </div>
                                    <div class="col">
                                        <label for="last_name">Last Name</label>
                                        <input class="form-control" name="last_name" id="last_name" type="text"
                                            value="{{user.last_name}}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="contact">Contact</label>
                                    <input class="form-control" name="contact" id="contact" type="text"
                                        value="{{user.contact}}">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input class="form-control" name="email" id="email" type="email"
                                        value="{{user.email}}" required>
                                    <input class="form-control" name="_id" id="_id" type="hidden" value="{{user._id}}"
                                        required>
                                </div>
                                <div class="btn-wrapper">
                                    <button type="submit" class="btn">Update</button>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </section>

    </section>

</main>