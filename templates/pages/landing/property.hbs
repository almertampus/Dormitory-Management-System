{{>topbar}}

<!-- Main -->
<main class="property">

    {{>sidebar}}

    <!-- Content -->
    <section class="content">

    </section>

    <form action="/user/property/add" method="POST" enctype="multipart/form-data">
        <!-- Add property modal -->
        <div class="modal fade right" id="add-property" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-full-height modal-right" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4>Add property</h4>
                    </div>
                    <div class="modal-body">
                        <div class="upload">
                            <label for="file">
                                <div id="uploaded-image"></div>
                                <span id="uploaded-message">Click here to upload an image</span>
                            </label>
                            <input class="inputfile" name="avatar" id="file" type="file"
                                accept="image/png, image/jpeg, image/jpg" onchange="upload(this);" required />
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="name" type="text" placeholder="Name" required>
                            <input class="form-control" name="location" type="text" placeholder="Location" required>
                            <textarea class="form-control" name="about" id="about" cols="30" rows="3"
                                placeholder="About" required></textarea>
                            <input class="form-control" name="room" type="text" placeholder="No. of rooms" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn cancel" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn add">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

</main>


<script>
    function upload(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                $('#uploaded-image')
                    .attr('style', 'background-image: url(' + e.target.result + '); background-size: contain;');
                $('#uploaded-message')
                    .attr('style', 'display: none;');
                $('.upload')
                    .attr('style', 'border: none;');
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>