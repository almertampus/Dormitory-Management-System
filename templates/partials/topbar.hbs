<!--Topbar-->
<nav class="navbar">

    <!-- Navbar brand -->
    <a class="navbar-brand" href="#logo">
        <img class="crest" src="/images/logo.png" alt="">
    </a>

    <!-- Nav -->
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a class="nav-link" href="/home">Home
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/property">Property</a>
        </li>
    </ul>

    <!-- User -->
    <div class="dropdown">
        <a class="user" type="button" id="dropdownMenuMenu" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            <img class="avatar" {{#if user.avatar}} src="data:image/png;base64,{{user.avatar.data}}" {{else}}
                src="/images/placeholder.png" {{/if}} alt="profile-picture">
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuMenu">
            <div class="menu">
                <div class="profile">
                    <img class="photo" {{#if user.avatar}} src="data:image/png;base64,{{user.avatar.data}}" {{else}}
                        src="/images/placeholder.png" {{/if}} alt="profile-picture">
                    <span class="name">{{user.name}}</span>
                    <span class="email">{{user.email}}</span>
                </div>
                <div class="button-group">
                    <a class="btn setting" href="#">Profile</a>
                    <form action="/user/logout" method="POST">
                        <button class="btn logout" type="submit">Log out</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</nav>