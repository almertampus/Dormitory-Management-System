<!-- Main -->
<main class="property">

    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="navbar-nav" href="">
            <a class="nav-item" data-toggle="modal" data-target="#add-property">
                <img class="icon" src="/images/icons/add.png" alt="">
                <span class="text">Add</span>
            </a>
            <a class="nav-item">
                <img class="icon" src="/images/icons/all.png" alt="">
                <span class="text">View all</span>
            </a>
            {{#each properties}}
            <a class="nav-item">
                <img class="icon" src="/images/crests/gryffindor-crest.png" alt="">
                <span class="text">{{name}}</span>
            </a>
            {{/each}}
        </div>
    </nav>

    <!-- Content -->
    <section class="content">

    </section>

    <form action="/user/property/add" method="POST">
        <!-- Add property modal -->
        <div class="modal fade right" id="add-property" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-full-height modal-right" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4>Add property</h4>
                    </div>
                    <div class="modal-body">
                        <!-- 
                        <div class="upload">
                            <label for="file"></label>
                            <input class="inputfile" name="file" id="file" type="file"
                                accept="image/png, image/jpeg, image/jpg" />
                        </div>-->
                        <div class="form-group">
                            <input class="form-control" name="name" type="text" placeholder="Name" required>
                            <input class="form-control" name="location" type="text" placeholder="Location" required>
                            <textarea class="form-control" name="about" id="about" cols="30" rows="5"
                                placeholder="About" required></textarea>
                            <input class="form-control" name="room" type="text" placeholder="No. of rooms" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn cancel" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn add">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</main>