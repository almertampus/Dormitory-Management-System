<div class="wrapper">
    <form class="col-xl-4" action="/user/signup" method="POST" enctype="multipart/form-data">
        <!-- Header -->
        <h2>Create an account</h2>

        <!-- Image -->
        <div class="upload">
            <label for="file">
                <div id="uploaded-image"></div>
                <span id="uploaded-message">Upload profile picture</span>
            </label>
            <input class="inputfile" name="avatar" id="file" type="file" accept="image/png, image/jpeg, image/jpg"
                onchange="upload(this);" required />
        </div>

        <!-- Input -->
        <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="Name" required>
            <input class="form-control" type="email" name="email" placeholder="Email" required>
            <input class="form-control" style="background-image: none;" type="password" name="password"
                placeholder="Password" required>
        </div>

        <!-- Button -->
        <button class="btn" type="submit">Log in</button>

        <!-- Forgot password -->
        <p>
            <br>
            <span>Already have an account? </span>
            <a href="/">Log in</a>
        </p>

    </form>
</div>


<script>
    function upload(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                $('#uploaded-image')
                    .attr('style', 'width: 10rem; height: 10rem; background-image: url(' + e.target.result + '); border-radius: 5rem;');
                $('#uploaded-message')
                    .attr('style', 'display: none;');
                $('.upload')
                    .attr('style', 'border: none;');
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>